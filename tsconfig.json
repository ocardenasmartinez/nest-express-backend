{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "strictNullChecks": true,
    "noLib": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "include": [
    "migrate.ts",
    "src/server.ts",
    "src/shared/config/**/*.ts",
    "src/shared/filters/**/*.ts",
    "src/shared/errors/**/*.ts",
    "src/shared/middlewares/**/*.ts",
    "migrations/**/*.ts",
    "src/modules/common/models/**/*.ts",
    "src/modules/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "assets"
  ]
}